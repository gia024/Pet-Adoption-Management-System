    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>mgjn87zgdp@playful-otter-ctavel.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Age__c</field>
        <field>Breed__c</field>
        <field>Intake_Date__c</field>
        <field>Gender__c</field>
        <field>Description__c</field>
        <field>Vaccinated__c</field>
        <field>Pet_Image__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>petmanager22@yopmail.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Adoption Approval</label>
        <name>Adoption_Approval</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Pet__c.Status__c</field>
            <operation>equals</operation>
            <value>Pending Adoption Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Mark_Pet_as_Adopted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Adoption_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Adoption_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Adoption Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
